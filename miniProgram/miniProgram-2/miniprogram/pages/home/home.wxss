/* miniprogram/pages/home/home.wxss */
.container{
  width: 720rpx;
  height:400rpx;
  border-radius: 10rpx;
  margin:15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}
.containerBg{
  width: 100%;
  height:100%;
  border-radius: 10rpx;
}


.contentBox{
  width: 100%;
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: absolute;
  z-index: 1;
  color: #fff;
}
.shopLogo{
  background: rgba(0, 0, 0, 0.5); 
  padding:10rpx 16rpx;
  border-radius: 20rpx 0 0 0;
  align-self: flex-start;
}
.containerBottom{
  width: 90%;
  display: flex;
  justify-content: space-between;
  padding-bottom: 30rpx;
}
.shopName{
  font-size: 36rpx;
}
.fontSm{
  font-size: 24rpx;
}
