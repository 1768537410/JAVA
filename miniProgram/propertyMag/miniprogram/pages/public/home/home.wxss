/* miniprogram/pages/public/home/home.wxss */

.banner{
  width: 100%;
  height: 230rpx;
}

.nav{
  background: #ffffff;
}
.nav-top{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav-top-item{
  margin: 50rpx 30rpx 80rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 120rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.nav-top-item:nth-child(1){
background-image: linear-gradient(150deg, #d8bab8, #cd736b); 
}
.nav-top-item:nth-child(2){
background-image: linear-gradient(150deg, #d7f1a1, #85a446); 
}
.nav-top-item:nth-child(3){
background-image: linear-gradient(150deg, #aedde2, #0c8894); 
}
.nav-top-item:nth-child(4){
background-image: linear-gradient(150deg, #e5d3fa, #c0b1d2); 
}

.nav-top-item image{
  width: 70rpx;
  height: 70rpx;
}
.nav-top-item text{
  position: absolute;
  top: 140rpx;
}


.section-msg,.section-vote,.section-news{
  background: #ffffff;
  margin-top: 20rpx;
}

.font-sm{
  font-size: 24rpx;
}
.font-lg{
  font-size: 62rpx;
  color: #deb808;
  font-style: oblique;
}

.vote-container{
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.vote-body{
  width: 70%;
  display: flex;
  justify-content: space-between;
}




.carousel{
  width: 100%;
  background-color: rebeccapurple;
}
.carousel_swiper{
  width: 100%;
  height: 300rpx;
  display: block;
  position: relative;
  background: #f4f4f4;
}
.carouselImg{
  width: 100%;
  height: inherit;
}





